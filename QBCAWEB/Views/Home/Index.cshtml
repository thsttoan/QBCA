                sidebarMenuEl.innerHTML = '<li><a href="#" class="active"><i class="fas fa-tachometer-alt menu-icon"></i> <span class="menu-text">Dashboard</span></a></li>';
                return;
            }

            profileUserNameEl.textContent = userFullName || roleData.name;
            profileUserRoleEl.textContent = roleData.name;

            const nameParts = (userFullName || roleData.name).split(' ');
            let initials = nameParts[0] ? nameParts[0][0] : '';
            if (nameParts.length > 1 && nameParts[nameParts.length - 1]) {
                initials += nameParts[nameParts.length - 1][0];
            } else if (initials.length === 1 && (userFullName || roleData.name).length > 1) {
                initials += (userFullName || roleData.name)[1] || '';
            }
            userAvatarEl.textContent = initials.toUpperCase() || roleData.avatarInitials;

            sidebarMenuEl.innerHTML = '';
            roleData.sidebarMenu.forEach(item => {
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = item.link;
                if (item.active) a.classList.add('active');
                a.innerHTML = `<i class="${item.icon} menu-icon"></i> <span class="menu-text">${item.name}</span>`;
                li.appendChild(a);
                sidebarMenuEl.appendChild(li);
            });

            dashboardContentEl.innerHTML = roleData.dashboardHtml;
