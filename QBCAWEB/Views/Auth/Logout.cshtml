@{
    Layout = null; // Trang này không cần layout chung, hoặc bạn có thể chỉ định layout khác
    ViewData["Title"] = "Logged Out";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QBCA</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            text-align: center;
            color: #333;
        }

        .logout-container {
            background-color: #fff;
            padding: 40px 50px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

            .logout-container h1 {
                color: #2c3e50;
                font-size: 24px;
                margin-bottom: 15px;
            }

            .logout-container p {
                font-size: 16px;
                line-height: 1.6;
                margin-bottom: 20px;
            }

            .logout-container a {
                color: #3498db;
                text-decoration: none;
                font-weight: 600;
            }

                .logout-container a:hover {
                    text-decoration: underline;
                }

        .spinner {
            border: 4px solid rgba(0,0,0,0.1);
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border-left-color: #3498db;
            margin: 20px auto;
            animation: spin 1s ease infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <div class="logout-container">
        <h1>You have been successfully logged out.</h1>
        <p>Thank you for using the Question Bank Checking Application (QBCA).</p>
        <div class="spinner"></div>
        <p>You will be redirected to the login page shortly...</p>
        <p>
            If you are not redirected automatically, <a href="@Url.Action("Login", "Auth")">click here to login again</a>.
        </p>
    </div>

    <script type="text/javascript">
        setTimeout(function () {
            window.location.href = '@Url.Action("Login", "Auth")';
        }, 3000); // Chuyển hướng sau 3 giây (3000 mili giây)
    </script>
</body>
</html>