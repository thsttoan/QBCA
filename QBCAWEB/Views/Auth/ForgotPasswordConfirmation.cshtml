@{
    Layout = null;
    ViewData["Title"] = "Password Reset Instructions Sent";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QBCA</title>

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            text-align: center;
            color: #333;
        }

        .confirmation-container {
            background-color: #fff;
            padding: 40px 50px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

            .confirmation-container h1 {
                color: #28a745;
                font-size: 24px;
                margin-bottom: 15px;
            }
            
            .confirmation-container p {
                font-size: 16px;
                line-height: 1.6;
                margin-bottom: 20px;
            }

            .confirmation-container a {
                color: #3498db;
                text-decoration: none;
                font-weight: 600;
            }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <img src="/path/to/your/success-icon.svg" alt="Success" style="width: 60px; margin-bottom: 20px;" /> 
        <h1>Instructions Sent!</h1>
        <p>
            If an account exists for <strong>@Model.Email</strong> (hoặc lấy từ ViewBag/TempData),
            you will receive an email with instructions on how to reset your password shortly.
        </p>
        <p>Please check your inbox (and spam folder).</p>
        <p><a href="@Url.Action("Login", "Auth")">Return to Login</a></p>
    </div>
</body>
</html>